.supertinyeditor
	html, body, iframe
		height 100%

	iframe 
		border none
		overflow-x hidden
		
		body
			margin 0
			padding 25px
			font 12px Verdana,Arial

	.ste-header 
		height 31px
		border-bottom 1px solid #bbb
		background url('../images/supertinyeditor/header-bg.gif') repeat-x
		padding-top 1px

		select 
			float left
			margin-top 5px

	.ste-body 
		margin-top  12px;
	
	.ste-font 
		margin-left 12px

	.ste-size 
		margin 0 3px

	.ste-style 
		margin-right 12px

	.ste-divider 
		float left
		width 1px
		height 30px
		background #ccc

	.ste-control 
		float left
		width 34px
		height 30px
		cursor pointer
		background-image url('../images/supertinyeditor/icons2.png')

		&:hover 
			background-color #fff
			background-position 30px 0

		&.bold
			background-position 0px -120px
		&.italic
			background-position 0px -150px
		&.underline
			background-position 0px -180px
		&.strikethrough
			background-position 0px -210px
		&.subscript
			background-position 0px -240px
		&.superscript
			background-position 0px -270px
		&.outdent
			background-position 0px -360px
		&.indent
			background-position 0px -390px
		&.unformat
			background-position 0px -720px
		&.undo
			background-position 0px -540px
		&.redo
			background-position 0px -570px

	.ste-footer 
		height 32px
		border-top 1px solid #bbb
		background #f5f5f5

	.toggle 
		float left
		background url(../images/supertinyeditor/icons2.png) -34px 2px no-repeat
		padding 9px 13px 0 31px
		height 23px
		border-right 1px solid #ccc
		cursor pointer
		color #666

		&:hover 
			background-color #fff

	.resize 
		float right
		height 32px
		width 32px
		background url(../images/supertinyeditor/resize.gif) 15px 15px no-repeat
		cursor s-resize

	#editor 
		cursor text
		margin 10px