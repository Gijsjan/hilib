.modal
	.overlay
		position fixed
		left 0
		top 0
		background-color black
		right 0
		bottom 0
		opacity 0.7

	.modalbody
		position fixed
		left 50vw
		top 50vh
		width 50vw
		height auto
		margin-left -(@width / 2)
		// margin-top -25vh
		background-color white
		border-radius 8px
		padding 20px
		box-shadow 1px 1px 8px #000

		header
			h2
				margin-top 0
				padding-top 0

			p.message.success
				color green

			p.message.warning
				color orange			

			p.message.error
				color red

		.body
			margin-bottom 40px
			overflow auto

		footer
			position absolute
			bottom 20px
			right 20px
			text-align right

			button
				margin-left 8px


