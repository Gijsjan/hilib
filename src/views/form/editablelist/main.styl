.editablelist
	position relative

	div.caret
		cursor pointer
		position absolute
		top 5px
		right 1px
		line-height 14px
		background: linear-gradient(to right, rgba(255,255,255,0) 0%,rgba(255,255,255,1) 50%);

		&:after
			display inline-block
			width 0
			height 0
			vertical-align middle
			border-top 4px solid #000
			border-right 4px solid rgba(0, 0, 0, 0)
			border-left 4px solid rgba(0, 0, 0, 0)
			content ""
			margin 0 4px 0 16px

	ul.selected
		display block
		list-style square
		padding-left 16px

		li
			cursor pointer
			line-height 16px

			&:hover:after
				content 'x'
				font-weight	bold
				color red
				margin-left 8px
				vertical-align top
				font-size 0.8em

	button
		margin-left 8px
		display none