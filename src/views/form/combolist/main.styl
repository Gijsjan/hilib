myblue = #88B1C8

.combolist
	position relative

	.input
		position relative
		display inline-block
		width 180px
		z-index 2

		input
			width 180px
			border 1px solid #CCC

		div.caret
			cursor pointer
			position absolute
			right 0px
			top 50%
			margin-top -7px
			bottom 1px
			background: linear-gradient(to right, rgba(255,255,255,0) 0%,rgba(255,255,255,1) 50%);

			&:after
				display inline-block
				width 0
				height 0
				vertical-align middle
				border-top 4px solid #000
				border-right 4px solid rgba(0, 0, 0, 0)
				border-left 4px solid rgba(0, 0, 0, 0)
				content ""
				margin 0 4px 0 16px

	button.edit
		margin-left 8px

	ul.selected
		display block
		list-style square
		padding 8px 0 0 16px

		li
			cursor pointer
			line-height 16px

			&:hover:after
				content 'x'
				font-weight	bold
				color red
				margin-left 8px
				vertical-align top
				font-size 0.8em

	ul.list
		white-space nowrap
		max-height 360px
		overflow-y auto
		overflow-x hidden
		display none
		position absolute
		left 0px
		background-color white
		list-style none
		margin -1px 0 0 0
		box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
		padding 4px 0
		border-radius 4px
		border 1px solid #CCC
		z-index 1

		li
			cursor pointer
			padding 2px 24px 2px 8px
		
			&:hover
				color white
				background-image linear-gradient(to bottom, myblue, #6291AC)

		li.active
			color white
			background-image: linear-gradient(to bottom, myblue, #6291AC);