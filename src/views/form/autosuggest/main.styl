myblue = #88B1C8

.autosuggest
	position relative

	div.caret
		cursor pointer
		position absolute
		top 5px
		right 1px
		line-height 14px
		background: linear-gradient(to right, rgba(255,255,255,0) 0%,rgba(255,255,255,1) 50%);

		&:after
			display inline-block
			width 0
			height 0
			vertical-align middle
			border-top 4px solid #000
			border-right 4px solid rgba(0, 0, 0, 0)
			border-left 4px solid rgba(0, 0, 0, 0)
			content ""
			margin 0 4px 0 16px

	ul.selected
		display block
		list-style square
		padding-left 16px

		li
			cursor pointer
			line-height 16px

			&:hover:after
				content 'x'
				font-weight	bold
				color red
				margin-left 8px
				vertical-align top
				font-size 0.8em

	ul.list
		white-space nowrap
		max-height 360px
		overflow-y auto
		overflow-x hidden
		z-index 1000
		display none
		position absolute
		top 24px
		left 0px
		background-color white
		list-style none
		margin 0
		box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
		padding 4px 0
		border-radius 4px
		border 1px solid #CCC

		li
			cursor pointer
			padding 0 24px 0 8px
		
			&:hover
				color white
				background-image linear-gradient(to bottom, myblue, #6291AC)

		li.active
			color white
			background-image linear-gradient(to bottom, myblue, #6291AC)

.autosuggest
	.input
		position relative
		display inline-block

	button.add, button.edit
		margin-left 4px
		background-color myblue
		color white
		border-radius 4px
		border 0
		height 18px
		margin 3px 0 3px 4px
		display none

		&:hover
			background-color darken(myblue, 20%)

		&.visible
			display inline-block
